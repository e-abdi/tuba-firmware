/
{
    aliases {
        roll_in1 = &roll_in1;
        roll_in2 = &roll_in2;
        pitch_in1 = &pitch_in1;
        pitch_in2 = &pitch_in2;
        pump_in1 = &pump_in1;
        pump_in2 = &pump_in2;
    };

    /* Motor H-bridge control pins (adjust to your wiring) */
    roll_in1: roll_in1 {
        gpios = <&gpio 25 GPIO_ACTIVE_HIGH>;
    };
    roll_in2: roll_in2 {
        gpios = <&gpio 26 GPIO_ACTIVE_HIGH>;
    };
    pitch_in1: pitch_in1 {
        gpios = <&gpio 27 GPIO_ACTIVE_HIGH>;
    };
    pitch_in2: pitch_in2 {
        gpios = <&gpio 14 GPIO_ACTIVE_HIGH>;
    };

    /* Pump control pins (adjust to your wiring) */
    pump_in1: pump_in1 {
        gpios = <&gpio 33 GPIO_ACTIVE_HIGH>;
    };
    pump_in2: pump_in2 {
        gpios = <&gpio 32 GPIO_ACTIVE_HIGH>;
    };
};
